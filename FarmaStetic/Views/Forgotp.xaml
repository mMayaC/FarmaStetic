<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FarmaStetic.Views.Forgotp">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Para poder recuperar su contraseña,digite el correo electrónico o el número del celular con el cual realizo el registro." Margin="0,30,0,0" HorizontalTextAlignment="Center" TextColor="black" FontSize="18" FontAttributes="Bold"/>
            <Frame CornerRadius="10"
                       Margin="0,40,0,0"
                       Background="#DADFDB">
                <Entry Placeholder="Correo electrónico o número de celular"
                           PlaceholderColor="#9E9E9E"
                           TextColor="#7F7979"
                           HeightRequest="40"/>
            </Frame>
            <Button Text="Enviar"
                    Background="#1F3B81"
                    CornerRadius="15"
                    TextColor="white"
                    Margin="0,20,0,0"
                    HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>